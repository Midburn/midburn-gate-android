<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_show"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.midburn.gate.midburngate.activities.ShowActivity">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="end"
              android:text="@string/invitation_number"
              android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView android:id="@+id/invitationNumberTextView_ShowActivity"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="end"
              android:text="@string/ticket_number"
              android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView android:id="@+id/ticketNumberTextView_ShowActivity"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="end"
              android:text="@string/ticket_owner_name"
              android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView android:id="@+id/ticketOwnerTextView_ShowActivity"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="end"
              android:text="@string/ticket_owner_id"
              android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView android:id="@+id/ticketOwnerIdTextView_ShowActivity"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="end"
              android:text="@string/ticket_type"
              android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView android:id="@+id/ticketTypeTextView_ShowActivity"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge"/>

        <Button android:id="@+id/exitButton_ShowActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="exit"
                android:background="@android:color/holo_red_light"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:visibility="gone"
                android:text="@string/exit"/>

        <Button android:id="@+id/entranceButton_ShowActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="entrance"
                android:background="@android:color/holo_green_light"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:visibility="gone"
                android:layout_marginBottom="30dp"
                android:text="@string/entrance"/>

    <Button android:id="@+id/cancelButton_ShowActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="cancel"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/cancel"/>

    <ProgressBar
        android:id="@+id/progressBar_ShowActivity"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
</LinearLayout>
